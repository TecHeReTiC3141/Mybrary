<h3>Search authors</h3>

<form action="/authors" method="GET">
    <label for="">
        <input type="text" name="pattern" id="pattern" value="<%= pattern %>">
    </label>
    <button type="submit">Search</button>
</form>

<h2>All authors</h2>

<div class="authors">
    <ul>
        <% authors.forEach(author => { %>
            <li>
                <div>
                    <%= author.name %>
                    <button><a href="/authors/<%= author.ID %>">View</a></button>
                    <button><a href="/authors/<%= author.ID %>/edit">Edit</a></button>
                    <form action="/authors/<%= author.ID %>?_method=DELETE" method="POST">
                        <button type="submit">Delete</button>
                    </form>
                </div>
            </li>
        <% }) %>
    </ul>

</div>

