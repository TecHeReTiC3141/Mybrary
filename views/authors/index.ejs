<h3>Search authors</h3>

<form action="/authors" method="GET">
    <label for="">
        <input type="text" name="pattern" id="pattern" value="<%= pattern %>">
    </label>
    <button type="submit">Search</button>
</form>

<h2>All authors</h2>

<div class="authors">
    <ul>
        <% authors.forEach(author => { %>
            <li><div><%= author.name %> </div></li>
        <% }) %>
    </ul>

</div>

