<h2 class="page-header">Edit author <%= author.name %></h2>

<form action="/authors/<%= author.ID %>?_method=PUT" method="POST">
    <%- include('_form_inputs') %>

    <div class="btn-row form-row form-row-end">
        <button class="btn btn-primary" type="submit">Update</button>
        <a class="btn btn-primary" href="/authors/<%= author.ID %>">Cancel</a>
    </div>
</form>